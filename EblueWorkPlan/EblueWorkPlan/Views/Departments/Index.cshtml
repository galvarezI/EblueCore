@model IEnumerable<EblueWorkPlan.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<partial name="_Sidebar2" />



<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentOf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentOldId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RosterDepartmentDirectorId)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentOf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentOldId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RosterDepartmentDirectorId)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.DepartmentId">Edit</a> |
                    <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.DepartmentId">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.DepartmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

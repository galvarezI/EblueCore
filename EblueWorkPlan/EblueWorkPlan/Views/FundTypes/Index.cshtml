@model IEnumerable<EblueWorkPlan.Models.FundType>

@{
    ViewData["Title"] = "Index";
}

<partial name="_sidebar2"/>
<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FundTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsFederal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsState)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FundTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFederal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsState)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.FundTypeId">Edit</a> |
                    <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.FundTypeId">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.FundTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

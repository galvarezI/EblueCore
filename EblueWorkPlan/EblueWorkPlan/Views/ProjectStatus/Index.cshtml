@model IEnumerable<EblueWorkPlan.Models.ProjectStatus>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StatusNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StatusNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProjectstatusId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProjectstatusId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProjectstatusId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

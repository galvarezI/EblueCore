@model IEnumerable<EblueWorkPlan.Models.Project>

@{
    ViewData["Title"] = "Index";
}
<partial name="_Sidebar2" />

<h1>Project Area </h1>

@if (TempData["AlertCreate"]!= null)
{
    <div class="alert alert-success">
        @TempData["AlertCreate"]
       
    </div>
}

<p>
    <a class="btn btn-success" asp-action="Create" style="text-decoration:none;">Create New</a>
</p>

@{
   


}



<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.ContractNumber)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Orcid) 
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Roster.RosterName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ProjectStatusId)
            </th>
        </tr>
    </thead>
    <tbody>

        
        @foreach (var item in Model)
        {
            

            <tr>
                <td>
                    <a asp-action="Page0" asp-route-id="@item.ProjectId">
                        @Html.DisplayFor(modelItem => item.ProjectNumber)
                    </a>

                </td>


                <td>
                    @item.ContractNumber
                </td>

                <td>
                    @item.Orcid
                </td>

                <td>
                   @Html.DisplayFor(modelItem => item.Roster.RosterName)
                </td>

                <td>
                    @item.ProjectStatusId
                </td>
                <td>
                    <a asp-action="Page0" asp-route-id="@item.ProjectId">Access</a> |
                    <a asp-action="Details" asp-route-id="@item.ProjectId">Details</a> |


                </td>
            </tr>
            
        }
    </tbody>
</table>


 @section scripts{
 
    <script>
        window.setTimeout(function(){
            $(".alert").fadeTo(500,0).slideUp(500,function(){
                $(this).remove();
            });
        
        
        },3000);
    </script>
 
 
 
 
 
 } 
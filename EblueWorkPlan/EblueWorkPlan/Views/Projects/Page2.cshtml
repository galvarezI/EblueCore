<div class="tab-content" id="nav-tabContent">

    <div class="tab-pane fade show active" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">
        <div class="row g-3">
            <form asp-action="Page2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input id="projectId" type="hidden" asp-for="ProjectId" />
                <input id="fieldWorkId" type="hidden" />
                

                <div class="card">

                    <div class="card-header">WorkPlan - FieldWork </div>


                    <div class="card-body">

                        <div class="row">


                            <div class="col-12">
                                <label asp-for="Wfieldwork" class="control-label"></label>
                                <textarea id="wfieldwork" asp-for="Wfieldwork" rows="3" class="form-control txt-wfieldwork"></textarea>
                                <span asp-validation-for="Wfieldwork" class="text-danger"></span>
                            </div>

                            <div class="col-6">
                                <label asp-for="Area" class="control-label"></label>
                                <input id="area" asp-for="Area" class="form-control txt-area" />
                                <span asp-validation-for="Area" class="text-danger"></span>
                            </div>

                            <div class="col-6">
                                <label asp-for="LocationId" class="control-label"></label>
                                <select id="locaionId" asp-for="LocationId" class="form-control" asp-items="ViewBag.locationsItems"></select>
                            </div>
                            <div class="col6">
                                <label asp-for="DateStarted" class="control-label"></label>
                                <input id="dateStarted"  class="form-control dateStr" />
                                <span asp-validation-for="DateStarted" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DateEnded" class="control-label"></label>
                                <input  id="dateEnded"  class="form-control  />
                                <span asp-validation-for="DateEnded" class="text-danger"></span>
                            </div>
                           

                            <div class="col-12">
                                <label asp-for="FieldoptionId" class="control-label"></label>
                                <select id="fieldoption" asp-for="FieldoptionId" class="form-control" asp-items="ViewBag.fieldItems"></select>
                            </div>

                            

                            <br />
                            <div class="form-group">
                                <input type="submit"  id="btnSubmit" value="Add" class="btn btn-primary" />
                                <input id="btnSave" type="button" value="Save" class="btn btn-success btn-save" style="display:none;" />
                            </div>


                        </div>

                    </div>

                    <div class="card-footer">

                        <div class="btn btn-primary col align-content-center"><a asp-action="ProjectList" asp-controller="Projects" asp-route-id="@Model.ProjectId" style="text-decoration:none; color:white;">Back</a></div>




                        <div class="btn btn-primary col align-content-end"><a asp-action="Page3" asp-controller="Projects" asp-route-id="@Model.ProjectId" style="text-decoration:none; color:white;">Next</a></div>

                    </div>

                </div>
            </form>
        </div>

    </div>

            
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="myToast" class="toast">
            <div class="toast-header bg-success">
                <strong class="me-auto text-light">Update..</strong>
                <small>Just Now...</small>
                <button class="close" data-bs-dismiss="toast"> </button>


            </div>
            <div class="toast-body ">
                Proceso completado satisfactoriamente
            </div>
        </div>
    </div>



    <br />


    <table class="table table-bordered" id="fieldTable">
        <thead>
            <h1 class="fieldId" style="display:none" class="field-id">@Model.FieldWorkId </h1>
            <tr>

                

                <th>
                    @Html.DisplayNameFor(model => model.Wfieldwork)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Area)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.DateStarted)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateEnded)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FieldoptionId)
                </th>
                
                <th>
                    Location
                </th>
               
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.fieldsWork)
            {
                <tr>
                    <td class="FieldId">
                        @Html.DisplayFor(modelItem => item.FieldWorkId)
                    </td>


                    <td class="Wfieldwork">
                        @Html.DisplayFor(modelItem => item.Wfieldwork)
                    </td>
                    <td class="area">
                        @Html.DisplayFor(modelItem => item.Area)
                    </td>


                    @*
                        Francis:

                        se envian con un resultado que no es el que se solicitó por el datepicker , dando como valor 1/1/0001,
                        el formato deseado es MM/dd/yyyy.



                    *@

                    <td class="dateStarted">
                        @Html.DisplayFor(modelItem => item.DateStarted)
                    </td>
                    <td class="dateEnded">
                        @Html.DisplayFor(modelItem => item.DateEnded)
                    </td>
                    <td class="inProgress">
                        @Html.DisplayFor(modelItem => item.Fieldoption.OptionName)
                    </td>
                    
                    <td class="location">
                        @Html.DisplayFor(modelItem => item.Location.LocationName)
                    </td>
                    
                    <td>
                        <div class="row">
                            <div class="col-4">
                                <button data-id="@item.FieldWorkId|@item.Wfieldwork|@item.Area|@item.DateStarted|@item.DateEnded|@item.FieldoptionId|@item.ProjectId|@item.LocationId"
                                    class="btn  btn-success modify">
                                    Modify
                                </button>
                            </div>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>


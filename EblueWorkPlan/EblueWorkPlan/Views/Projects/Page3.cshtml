@model EblueWorkPlan.Models.ViewModels.ProjectFormView
@{
    ViewData["Title"] = "Page3";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<partial name="_Sidebar2" />

<h1>Research Project for: @Model.ProjectNumber</h1>

<h3>Laboratory Page</h3>
<br />

<nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <button class="nav-link " id="nav-details-tab" data-bs-toggle="tab" data-bs-target="#nav-details" type="button" role="tab" aria-controls="nav-details" aria-selected="false"><i class="fa-solid fa-0" style="color: #2267dd;"></i></button>
        <button class="nav-link " id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true" asp-action="ProjectList" asp-controller="Projects"><i class="fa-solid fa-1" style="color: #2267dd;"></i></button>
        <button class="nav-link " id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false" asp-action="Page2" asp-controller="Projects"><i class="fa-solid fa-2" style="color: #2267dd;"></i></button>
        <button class="nav-link active" id="nav-laboratory-tab" data-bs-toggle="tab" data-bs-target="#nav-laboratory" type="button" role="tab" aria-controls="nav-laboratory" aria-selected="false" asp-action="Page3" asp-controller="Projects"><i class="fa-solid fa-3" style="color: #2267dd;"></i></button>
        <button class="nav-link" id="nav-analytical-tab" data-bs-toggle="tab" data-bs-target="#nav-analytical" type="button" role="tab" aria-controls="nav-analytical" aria-selected="false" asp-action="Page4" asp-controller="Projects"><i class="fa-solid fa-4" style="color: #2267dd;"></i></button>
        <button class="nav-link" id="nav-sciproject-tab" data-bs-toggle="tab" data-bs-target="#nav-sciproject" type="button" role="tab" aria-controls="nav-sciproject" aria-selected="false" asp-action="Page5" asp-controller="Projects"><i class="fa-solid fa-5" style="color: #2267dd;"></i></button>
        <button class="nav-link" id="nav-otherpersonel-tab" data-bs-toggle="tab" data-bs-target="#nav-otherpersonel" type="button" role="tab" aria-controls="nav-otherpersonel" aria-selected="false" asp-action="Page6" asp-controller="Projects"><i class="fa-solid fa-6" style="color: #2267dd;"></i></button>
        <button class="nav-link" id="nav-gradass-tab" data-bs-toggle="tab" data-bs-target="#nav-gradass" type="button" role="tab" aria-controls="nav-gradass" aria-selected="false" asp-action="Page7" asp-controller="Projects"><i class="fa-solid fa-7" style="color: #2267dd;"></i></button>
        <button class="nav-link" id="nav-fund-tab" data-bs-toggle="tab" data-bs-target="#nav-fund" type="button" role="tab" aria-controls="nav-fund" aria-selected="false" asp-action="Page8" asp-controller="Projects"><i class="fa-solid fa-8" style="color: #2267dd;"></i></button>
        <button class="nav-link" id="nav-budget-tab" data-bs-toggle="tab" data-bs-target="#nav-budget" type="button" role="tab" aria-controls="nav-budget" aria-selected="false" ><i class="fa-solid fa-9" style="color: #2267dd;"></i></button>
        <button class="nav-link" id="nav-notes-tab" data-bs-toggle="tab" data-bs-target="#nav-notes" type="button" role="tab" aria-controls="nav-notes" aria-selected="false" asp-action="Page9" asp-controller="Projects"><i class="fa-solid fa-1" style="color: #2267dd;"></i><i class="fa-solid fa-0" style="color: #2267dd;"></i> </button>


    </div>
</nav>

<div id="showModal">
</div>

<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-laboratory" role="tabpanel" aria-labelledby="nav-laboratory-tab" tabindex="0">
        <div class="row g-3">
            <form asp-action="Page3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="card">

                    <div class="card-header">Laboratory </div>

                    
                    <div class="card-body">

                        <div class="row">
                            <input type="hidden" asp-for="ProjectId" />
                            <input type="hidden" asp-for="LabId" />
                            <div class="col-12">
                                <label asp-for="WorkPlanned" class="control-label"></label>
                                <textarea asp-for="WorkPlanned" rows="3" class="form-control txt-w"></textarea>
                                <span asp-validation-for="WorkPlanned" class="text-danger"></span>
                            </div>


                            <div class="row">
                                <div class="form-group col-4">
                                    <label asp-for="Descriptions" class="control-label"></label>
                                    <input asp-for="Descriptions" class="form-control txt-d" />
                                    <span asp-validation-for="Descriptions" class="text-danger"></span>
                                </div>
                                <div class="form-group col-4">
                                    <label asp-for="EstimatedTime" class="control-label"></label>
                                    <input asp-for="EstimatedTime" class="form-control txt-est" />
                                    <span asp-validation-for="EstimatedTime" class="text-danger"></span>
                                </div>



                                <div class="form-group col-4">
                                    <label asp-for="FacilitiesNeeded" class="control-label"></label>
                                    <input asp-for="FacilitiesNeeded" class="form-control txt-fn" />
                                    <span asp-validation-for="FacilitiesNeeded" class="text-danger"></span>
                                </div>

                            </div>

                            <br>
                            <div class="form-group" style="padding-top:20px;">
                                <input type="submit" value="Add" class="btn btn-primary"  />
                                <input type="button" value="Save" class="btn btn-success btn-save" style="display: none" />
                            </div>


                        </div>

                    </div>


                    <div class="card-footer">

                        <div class="btn btn-primary col align-content-center"><a asp-action="Page2" asp-controller="Projects" asp-route-id="@Model.ProjectId" style="text-decoration:none; color:white;">Back</a></div>




                        <div class="btn btn-primary col align-content-end"><a asp-action="Page4" asp-controller="Projects" asp-route-id="@Model.ProjectId" style="text-decoration:none; color:white;">Next</a></div>

                    </div>
                </div>
            </form>

            <div id="showModal">
            </div>

            <br />

            <table class="table table-bordered " id="labTable">
                <thead>
                    <h1 class="LabId" style="display:none" class="field-id">@Model.LabId </h1>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.LabId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.WorkPlanned)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Descriptions)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EstimatedTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FacilitiesNeeded)
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.laboratories)
                    {
                        <tr>
                           
                            <td class="labId">
                                    @Html.DisplayFor(modelItem => item.LabId)
                            </td>
                            
                            <td class="workplanned">
                                @Html.DisplayFor(modelItem => item.WorkPlanned)
                            </td>
                            <td class="dess">
                                @Html.DisplayFor(modelItem => item.Descriptions)
                            </td>
                            <td class="estimated">
                                @Html.DisplayFor(modelItem => item.EstimatedTime)
                            </td>
                            <td class="facili">
                                @Html.DisplayFor(modelItem => item.FacilitiesNeeded)
                            </td>
                            <td>
                                <div class="row">
                                    <div class="col-4">
                                        <div class=" btn  btn-success modify" style="padding:0,2px;" data-bs-toggle="modal" data-bs-target="#exampleModal">Modify</div>

                                    </div>
                                    @*<div class="col-4">

                                        <div class="btn btn-danger" style="padding:0,2px;">Delete </div>
                                    </div>*@
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
    </div>


</div>


@section scripts{
    <script>
        $(".modify").click(function () {
            $(this).prop("disabled", "disabled")
            $(".hide").hide();
            $("#labTable tbody tr").each(function () {
                // Dentro de este bucle, 'this' se refiere a cada fila individual

                // Capturar el valor de la Columna 1 en la fila actual
                var id = $(this).find("td.labId").text();

                // Convertir el valor a entero utilizando parseInt
                var LabId = parseInt(id, 10);

                // Imprimir el valor entero en la consola
                console.log("Valor de la Columna 1 como entero: " + LabId);

                var url = "@Url.Action("Page3Modal","Projects")";

                $.get(url, { id: LabId }).done(function (data) {
                    $("#showModal").append(data);
                    $("#exampleModal").addClass("show");

                })

            });



            //data-bs-toggle="modal" data-bs-target="#exampleModal












        });




    </script>

}

 

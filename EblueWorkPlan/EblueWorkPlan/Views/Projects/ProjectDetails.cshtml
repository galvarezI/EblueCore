@model EblueWorkPlan.Models.ViewModels.ProjectFormView;

<partial name="_Sidebar2" />

<h1>Research Project for: @Model.ProjectId</h1>


<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">
        <div class="row g-3">


            <form asp-action="ProjectDetails">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" id="projectId" asp-for="ProjectId" />
                <div class="card">

                    <div class="card-header">Project Template</div>


                    <div class="card-body">

                        <div class="row">
                            <div class="col-12">
                                <label asp-for="ProjectTitle" class="control-label"></label>
                                <input asp-for="ProjectTitle" class="form-control" readonly />
                                <span asp-validation-for="ProjectTitle" class="text-danger"></span>
                            </div>
                        </div>



                        <div class="row">
                            <div class="col-6">
                                <label asp-for="ProjectNumber" class="control-label"></label>
                                <input asp-for="ProjectNumber" class="form-control" readonly />
                                <span asp-validation-for="ProjectNumber" class="text-danger"></span>



                            </div>



                            <div class="col-6">
                                <label asp-for="RosterId" class="control-label"></label>
                                <select asp-for="RosterId" class="form-control" asp-items="ViewBag.rosterItems" readonly></select>
                            </div>
                        </div>



                        <div class="form-group">
                            <label asp-for="DepartmentId" class="control-label"></label>
                            <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentItem" readonly></select>
                        </div>

                        <div class="form-group">
                            <label asp-for="CommId" class="control-label"></label>
                            <select asp-for="CommId" class="form-control" asp-items="ViewBag.CommoditiesItem" readonly></select>
                        </div>

                        <div class="form-group">
                            <label asp-for="ProgramAreaId" class="control-label"></label>
                            <select asp-for="ProgramAreaId" class="form-control" asp-items="ViewBag.ProgramAreaItem" disabled></select>
                        </div>

                        <div class="form-group">
                            <label asp-for="Substation" class="control-label"></label>
                            <input asp-for="Substation" class="form-control" readonly />
                        </div>

                        <div class="form-group">
                            <label asp-for="FiscalYearId" class="control-label"></label>
                            <select asp-for="FiscalYearId" class="form-control" asp-items="ViewBag.FiscalYearItem" readonly></select>
                        </div>

                        <div class="form-group">
                            <label asp-for="ContractNumber" class="control-label"></label>
                            <input asp-for="ContractNumber" class="form-control" readonly />
                            <span asp-validation-for="ContractNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Orcid" class="control-label"></label>
                            <input asp-for="Orcid" class="form-control" readonly />
                            <span asp-validation-for="Orcid" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="FundTypeId" class="control-label"></label>
                            <select asp-for="FundTypeId" class="form-control" asp-items="ViewBag.FundTypeItem" readonly></select>
                        </div>


                        <div class="form-group">
                            <label asp-for="PorganizationsId" class="control-label"></label>
                            <select asp-for="PorganizationsId" class="form-control" asp-items="ViewBag.POrganizationItem" readonly></select>
                        </div>



                        <div class="card aprove-section">
                            <input data-id="@Model.ProjectId" type="button" id="approve" value="Aprove" class="btn btn-success "  />
                            <input data-id="@Model.ProjectId" type="button" id="reject" value="Reject" class="btn btn-danger " />
                        </div>



                    </div>

                    <div class="card-footer">

                        <div class="form-group">
                            <input type="submit" value="Back Home" class="btn btn-primary " asp-action="Index" asp-controller="Projects" />
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
        
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
                <div id="myapprove" class="toast">
                    <div class="toast-header bg-success">
                        <strong class="me-auto text-light">Update..</strong>
                        <small>Just Now...</small>
                        <button class="close" data-bs-dismiss="toast"> </button>


                    </div>
                    <div class="toast-body ">
                        Approved!
                    </div>
                </div>
            </div>



    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="myreject" class="toast">
            <div class="toast-header bg-danger">
                <strong class="me-auto text-light">Update..</strong>
                <small>Just Now...</small>
                <button class="close" data-bs-dismiss="toast"> </button>


            </div>
            <div class="toast-body ">
                Rejected!
            </div>
        </div>
    </div>





    </div>
</div>

@section scripts{
    <script>






        $(function () {




            $("#approve").click(function () {

                let item = $(this).attr("data-id");
                console.log(item)


               const params = {
                    


                    ProjectId: $('#projectId').val(),
                    
                };
                 $.ajax({
                    type: "POST",
                    url: '/Projects/PostApproveData',
                    data: params,
                    success: function () {
                        alert('Entre');

                    },
                    dataType: 'json'
                });


                $('#myapprove').show();
            });


              $("#reject").click(function () {

                let item = $(this).attr("data-id");
                console.log(item)

               const params = {

                    


                    ProjectId: $('#projectId').val(),
                    
                };
                 $.ajax({
                    type: "POST",
                    url: '/Projects/PostRejectData',
                    data: params,
                    success: function () {
                        alert('Entre');

                    },
                    dataType: 'json'
                });


                $('#myreject').show();
            });





        });


    </script>

}



@model EblueWorkPlan.Models.ViewModels.ProjectFormView
@{
    ViewData["Title"] = "ProjectList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ProjectList</h1>

<nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true"><i class="fa-solid fa-1" style="color: #2267dd;"></i></button>
        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false"><i class="fa-solid fa-2" style="color: #2267dd;"></i></button>
        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false"><i class="fa-solid fa-3" style="color: #2267dd;"></i></button>
        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false"><i class="fa-solid fa-4" style="color: #2267dd;"></i></button>
        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false"><i class="fa-solid fa-5" style="color: #2267dd;"></i></button>
        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false"><i class="fa-solid fa-6" style="color: #2267dd;"></i></button>
        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false"><i class="fa-solid fa-7" style="color: #2267dd;"></i></button>
        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false"><i class="fa-solid fa-8" style="color: #2267dd;"></i></button>
        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false"><i class="fa-solid fa-9" style="color: #2267dd;"></i></button>



    </div>
</nav>
<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">
        <div class="row g-3">
            <form asp-action="Page2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProjectId" />
                <div class="card">

                    <div class="card-header">Create Project: @Html.DisplayFor(modelItem => Model.ProjectNumber)</div>


                    <div class="card-body">

                        <div class="row">
                            <div class="col-12">
                                <label asp-for="Objectives" class="control-label"></label>
                                <input asp-for="Objectives" class="form-control" />
                                <span asp-validation-for="Objectives" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-12">
                                <label asp-for="ObjWorkPlan" class="control-label"></label>
                                <input asp-for="ObjWorkPlan" class="form-control" />
                                <span asp-validation-for="ObjWorkPlan" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <label asp-for="PresentOutlook" class="control-label"></label>
                                <input asp-for="PresentOutlook" class="form-control" />
                                <span asp-validation-for="PresentOutlook" class="text-danger"></span>
                            </div>
                        </div>








                    </div>



                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>


                </div>
            </form>

        </div>
    </div>
    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card">

                <div class="card-header">WorkPlan - FieldWork </div>


                <div class="card-body">

                    <div class="row">

                        <div class="form-group">
                            <label asp-for="ProjectId" class="control-label"></label>
                            <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectNumber"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="LocationId" class="control-label"></label>
                            <select asp-for="LocationId" class="form-control" asp-items="ViewBag.LocationName"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateStarted" class="control-label"></label>
                            <input asp-for="DateStarted" class="form-control" />
                            <span asp-validation-for="DateStarted" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateEnded" class="control-label"></label>
                            <input asp-for="DateEnded" class="form-control" />
                            <span asp-validation-for="DateEnded" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="InProgress" /> @Html.DisplayNameFor(model => model.InProgress)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="ToBeInitiated" /> @Html.DisplayNameFor(model => model.ToBeInitiated)
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>


                    </div>

                </div>
            </div>
        </form>
    </div>
</div>
<div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">
</div>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EblueWorkPlan</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EblueWorkPlan.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EblueWorkPlan</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Rosters" asp-action="Index">Rosters</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Admin
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Rosters" asp-action="Index" >Admin</a></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Projects" asp-action="Index">Projects</a></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Porganizations" asp-action="Index">POrganizations</a></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="FieldWorks" asp-action="Index">Field Work</a></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="GradAsses" asp-action="Index">GradAss</a></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Funds" asp-action="Index">Funds</a></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Departments" asp-action="Index">Departments</a></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Commodities" asp-action="Index">Commodity</a></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Locationns" asp-action="Index">Locations</a></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="FiscalYears" asp-action="Index">Fiscal Year</a></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Users" asp-action="Index">Users</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - EblueWorkPlan - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

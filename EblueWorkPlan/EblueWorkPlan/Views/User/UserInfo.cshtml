@using Microsoft.AspNetCore.Identity;
@using EblueWorkPlan.Models.ViewModels;
@model List<EblueWorkPlan.Models.ViewModels.IdentityUserRoleVM>



@{
    ViewData["Title"] = "Page10";
}
<partial name="_Sidebar2" />


<h1>UPR Users</h1>


<a class="btn btn-success" asp-action="Create" style="text-decoration:none;">Create New</a>

<table id="userTable" class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>

            <th>
                Email
            </th>
            <th>
               UserName
            
            </th>

            <th>
                Rol/roles
            </th>

            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                 <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UserRole)
                </td>


                <td>
                   <a asp-action="AddRole" asp-route-id ="@item.Id" class="btn btn-success">Add Role</a>
                    

                </td>

                <td>
                    <a asp-action="UserRoles" asp-route-id="@item.Id" class="btn btn-warning">Remove Role</a>


                </td>

                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Remove User</a>


                </td>

               
            </tr>
        }
    </tbody>
</table>


@section Scripts{

<script>
     $(document).ready(function (){
            $('#userTable').DataTable();


        })
</script>



}